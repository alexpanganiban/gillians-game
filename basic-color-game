import UIKit
import AVFoundation

class FirstColorGameViewController: UIViewController {
    
    var duck1Colored = false
    var duck2Colored = false
    
    var fish1Colored = false
    var fish2Colored = false
    var fish3Colored = false
    var fish4Colored = false
    var fish5Colored = false
    
    var allColored = UIImageView(frame: CGRectMake(0, 0, 1024, 768));
    var image = UIImage(named: "All-Colored.png");
    var orangeFish = UIImage(named: "OrangeFish.png");
    var duck = UIImage(named: "newDuck.png");
    
    @IBOutlet weak var duck1: UIButton!
    @IBOutlet weak var duck2: UIButton!
    
    
    @IBOutlet weak var fish1: UIButton!
    @IBOutlet weak var fish2: UIButton!
    @IBOutlet weak var fish3: UIButton!
    @IBOutlet weak var fish4: UIButton!
    @IBOutlet weak var fish5: UIButton!
    
    @IBOutlet weak var narrator: UIButton!
    @IBOutlet weak var progressTapped: UIButton!
    
    
    var audioInstructions = try! AVAudioPlayer(contentsOfURL: NSURL(fileURLWithPath: NSBundle.mainBundle().pathForResource("instructions", ofType: "mp3")!))
    
    var bubbles = try! AVAudioPlayer(contentsOfURL: NSURL(fileURLWithPath: NSBundle.mainBundle().pathForResource("bubbles", ofType: "wav")!))
    
    var goodJob = try! AVAudioPlayer(contentsOfURL: NSURL(fileURLWithPath: NSBundle.mainBundle().pathForResource("ducks", ofType: "mp3")!))
    
    var quack = try! AVAudioPlayer(contentsOfURL: NSURL(fileURLWithPath: NSBundle.mainBundle().pathForResource("quack", ofType: "wav")!))

    
    
    override func viewDidLoad() {
        super.viewDidLoad()

        // Do any additional setup after loading the view.
        
        progressTapped.hidden = true
        
        audioInstructions.play()
        audioCongrats()
        
        if (duck1Colored == false || duck2Colored == false || fish1Colored == false || fish2Colored == false || fish3Colored == false || fish4Colored == false || fish5Colored == false) {
            progressTapped.hidden = false
        }
    }

    override func didReceiveMemoryWarning() {
        super.didReceiveMemoryWarning()
        // Dispose of any resources that can be recreated.
    }
    
    @IBAction func duck1Tapped(sender: AnyObject) {
        if (fish1Colored == true && fish2Colored == true && fish3Colored == true && fish4Colored == true && fish5Colored == true) {
            UIView.transitionWithView(self.duck1,
                                      duration:0.5,
                                      options: UIViewAnimationOptions.TransitionCrossDissolve,
                                      animations: { self.duck1.setImage(self.duck, forState: .Normal)},
                                      completion: nil)
        }
        
        quack.play()
        duck1Colored = true
        
        if (duck1Colored == true && duck2Colored == true){
            self.duck1.frame = CGRectMake(0, 0, 1024, 768);
            let image = UIImage(named: "All-Colored.png") as UIImage!
            
            self.duck1.setImage(image, forState: .Normal)
        }
    }
    
    @IBAction func duck2Tapped(sender: AnyObject) {
        if (fish1Colored == true && fish2Colored == true && fish3Colored == true && fish4Colored == true && fish5Colored == true) {
            UIView.transitionWithView(self.duck2,
                                      duration:0.5,
                                      options: UIViewAnimationOptions.TransitionCrossDissolve,
                                      animations: { self.duck2.setImage(self.duck, forState: .Normal)},
                                      completion: nil)
        }
        quack.play()
        duck2Colored = true
        
        if (duck1Colored == true && duck2Colored == true){
            self.duck2.frame = CGRectMake(0, 0, 1024, 768);
            let image = UIImage(named: "All-Colored.png") as UIImage!
            self.duck2.setImage(image, forState: .Normal)
        }
    }
    
    
    
    
    
    @IBAction func fish1Tapped(sender: AnyObject) {
        UIView.transitionWithView(self.fish1,
                                  duration:0.5,
                                  options: UIViewAnimationOptions.TransitionCrossDissolve,
                                  animations: { self.fish1.setImage(self.orangeFish, forState: .Normal)},
                                  completion: nil)
        bubbles.play()
        fish1Colored = true
        if (fish1Colored == true && fish2Colored == true && fish3Colored == true && fish4Colored == true && fish5Colored == true) {
            goodJob.play()
        }
    }
    
    
    @IBAction func fish2Tapped(sender: AnyObject) {
        UIView.transitionWithView(self.fish2,
                                  duration:0.5,
                                  options: UIViewAnimationOptions.TransitionCrossDissolve,
                                  animations: { self.fish2.setImage(self.orangeFish, forState: .Normal)},
                                  completion: nil)
        bubbles.play()
        fish2Colored = true
        if (fish1Colored == true && fish2Colored == true && fish3Colored == true && fish4Colored == true && fish5Colored == true) {
            goodJob.play()
        print(fish2Colored)
        }
    }
        
    
    
    @IBAction func fish3Tapped(sender: AnyObject) {
        UIView.transitionWithView(self.fish3,
                                  duration:0.5,
                                  options: UIViewAnimationOptions.TransitionCrossDissolve,
                                  animations: { self.fish3.setImage(self.orangeFish, forState: .Normal)},
                                  completion: nil)
        bubbles.play()
        fish3Colored = true
        if (fish1Colored == true && fish2Colored == true && fish3Colored == true && fish4Colored == true && fish5Colored == true) {
            goodJob.play()
        }
        print(fish3Colored)
    }
    
    
    
    @IBAction func fish4Tapped(sender: AnyObject) {
        UIView.transitionWithView(self.fish4,
                                  duration:0.5,
                                  options: UIViewAnimationOptions.TransitionCrossDissolve,
                                  animations: { self.fish4.setImage(self.orangeFish, forState: .Normal)},
                                  completion: nil)
        bubbles.play()
        fish4Colored = true
        if (fish1Colored == true && fish2Colored == true && fish3Colored == true && fish4Colored == true && fish5Colored == true) {
            goodJob.play()
        }
        print(fish4Colored)
    }
    
    
    
    @IBAction func fish5Tapped(sender: AnyObject) {
        UIView.transitionWithView(self.fish5,
                                  duration:0.5,
                                  options: UIViewAnimationOptions.TransitionCrossDissolve,
                                  animations: { self.fish5.setImage(self.orangeFish, forState: .Normal)},
                                  completion: nil)
        bubbles.play()
        fish5Colored = true
        if (fish1Colored == true && fish2Colored == true && fish3Colored == true && fish4Colored == true && fish5Colored == true) {
            goodJob.play()
        }
        print(fish5Colored)
        
    }
    
    
    func audioCongrats() {
        if (fish1Colored == true){
            goodJob.play()
        }
    }
    
    @IBAction func progressButtonTapped(sender: AnyObject) {
        if (duck1Colored == false || duck2Colored == false || fish1Colored == false || fish2Colored == false || fish3Colored == false || fish4Colored == false || fish5Colored == false) {
            progressTapped.hidden = true
        }
    }

    
    
    
    
    
    

    /*
    // MARK: - Navigation

    // In a storyboard-based application, you will often want to do a little preparation before navigation
    override func prepareForSegue(segue: UIStoryboardSegue, sender: AnyObject?) {
        // Get the new view controller using segue.destinationViewController.
        // Pass the selected object to the new view controller.
    }
    */

}
